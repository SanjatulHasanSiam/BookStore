@model IEnumerable<BookStore.Models.Domain.Author>

@if (TempData["msg"] != null)
{
    <div class="form-group">
        @TempData["msg"]
    </div>
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="row-2 pt-3 pb-3">
                <h1>Author List</h1>
                <a class="btn btn-primary" asp-controller="Author" asp-action="Add">Add Author</a>
            </div>
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Author Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorName</td>
                            <td>
                                <a class="btn btn-success" href="/Author/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure ?')" href="/Author/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
