@model BookStore.Models.Domain.Author

<div class="container pt-5">
    
    <div class="row">
        <div class="col-md-6">
            <h1>Update Author</h1>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AuthorName">Author Name</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <a class="btn btn-primary" asp-controller="Author" asp-action="GetAll">List</a>
                </div>
            </form>
        </div>
    </div>
</div>