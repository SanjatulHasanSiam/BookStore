@model IEnumerable<BookStore.Models.Domain.Genre>

@if (TempData["msg"] != null)
{
    <div class="form-group">
        <h3>@TempData["msg"]</h3>
    </div>
}
<div class="container pt-5">
   
    <div class="row">
        <div class="col-md-6">
            <div class="row-2 pt-3 pb-3">
                    <h1>Genre List</h1>
                    <a class="btn btn-primary" asp-controller="Genre" asp-action="Add">Add Genre</a>
            </div>
          
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure ?')" href="/Genre/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
